<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#c0ffffff"
    >
    <ImageView
        android:id="@+id/item_ActorList_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerHorizontal="true"
        />

    <TextView android:id="@+id/item_ActorList_TextView_Name"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_ActorList_ImageView"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView android:id="@+id/item_ActorList_TextView_As"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_ActorList_TextView_Name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

    <TextView android:id="@+id/item_ActorList_TextView_Character"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_ActorList_TextView_As"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />
</RelativeLayout>